{
  "functions": {
    "predeploy": [
      "npm run build:firebase",
      "cp -r ./src/server/public ./functions/build/server/public",
      "cp ./src/server/dist/loadable-stats.json ./functions/build/server/dist"
    ]
  },
  "hosting": {
    "public": "src/server/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  }
}
