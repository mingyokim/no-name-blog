{
  "functions": {
    "predeploy": [
      "npm run build:firebase",
      "cp -r ./public ./functions/public",
      "cp -r ./dist ./functions/public"
    ]
  },
  "hosting": {
    "public": "src/server/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  }
}
